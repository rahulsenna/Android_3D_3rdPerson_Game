{
    "tasks": [
        {
            "type": "shell",
            "label": "Assemble APK",
            "command": "./gradlew",
            "args": [
                ":app:assembleDebug",
            ],
            "options": {
                "cwd": "${workspaceFolder}/../../../../"
            },
            "problemMatcher": [
                {
                    "owner": "BuildError",
                        "fileLocation": ["relative", "${workspaceFolder}"],
                        "pattern": {
                            "regexp": "^(?:.*/)(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."

        },
        {
            "type": "shell",
            "label": "Install APK",
            "command": "adb",
            "args": [
                "install", "-r", "app/build/outputs/apk/debug/app-debug.apk",
            ],
            "options": {
                "cwd": "${workspaceFolder}/../../../../"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "dependsOn": "Assemble APK"
        },
        {
            "type": "shell",
            "label": "RUN APK",
            "command": "adb",
            "args": [
                "shell", "am", "start", "-n", "com.example.game/.MainActivity"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../../../../"
            },

            "group": {
                "kind": "none",
                "isDefault": false
            },
            "dependsOn": "Install APK"
        }



    ],

    "version": "2.0.0"
}